@page "/"
@inject IISMonitorService IISMonitor
@inject EventLogService EventLog
@rendermode InteractiveServer

<PageTitle>IIS Monitor - Overview</PageTitle>

<h1 class="mb-4">IIS Server Overview</h1>

<div class="row mb-4">
    <!-- Applications Health (Primary Focus) -->
    <div class="col-md-3 mb-3">
        <div class="card h-100 @(GetAppHealthBorderClass())">
            <div class="card-body text-center">
                <i class="bi bi-app-indicator display-4 @(GetAppHealthTextClass())"></i>
                <h2 class="mt-2">@_apps.Count</h2>
                <p class="text-muted mb-0">Applications</p>
                <small class="@(GetAppHealthTextClass())">
                    @_apps.Count(a => a.IsResponding) healthy /
                    @_apps.Count(a => a.LastChecked.HasValue && !a.IsResponding) unhealthy
                </small>
            </div>
        </div>
    </div>

    <!-- Sites Summary -->
    <div class="col-md-3 mb-3">
        <div class="card h-100 border-primary">
            <div class="card-body text-center">
                <i class="bi bi-globe display-4 text-primary"></i>
                <h2 class="mt-2">@_sites.Count</h2>
                <p class="text-muted mb-0">Sites</p>
                <small class="text-success">@_sites.Count(s => s.State == "Started") running</small>
            </div>
        </div>
    </div>

    <!-- Errors -->
    <div class="col-md-3 mb-3">
        <div class="card h-100 @(_eventSummary.TotalErrors > 0 ? "border-danger" : "border-success")">
            <div class="card-body text-center">
                <i class="bi bi-x-circle display-4 @(_eventSummary.TotalErrors > 0 ? "text-danger" : "text-success")"></i>
                <h2 class="mt-2">@_eventSummary.TotalErrors</h2>
                <p class="text-muted mb-0">Errors (24h)</p>
            </div>
        </div>
    </div>

    <!-- Warnings -->
    <div class="col-md-3 mb-3">
        <div class="card h-100 @(_eventSummary.TotalWarnings > 0 ? "border-warning" : "border-success")">
            <div class="card-body text-center">
                <i class="bi bi-exclamation-triangle display-4 @(_eventSummary.TotalWarnings > 0 ? "text-warning" : "text-success")"></i>
                <h2 class="mt-2">@_eventSummary.TotalWarnings</h2>
                <p class="text-muted mb-0">Warnings (24h)</p>
            </div>
        </div>
    </div>
</div>

<!-- Applications Status -->
<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-app-indicator me-2"></i>Applications Status</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Application</th>
                                <th>Site</th>
                                <th>Status</th>
                                <th>Response</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var app in _apps.OrderByDescending(a => !a.IsResponding && a.LastChecked.HasValue).Take(10))
                            {
                                <tr class="@(!app.IsResponding && app.LastChecked.HasValue ? "table-danger" : "")">
                                    <td>
                                        <strong>@app.Path</strong>
                                    </td>
                                    <td>
                                        <small>@app.SiteName</small>
                                    </td>
                                    <td>
                                        @if (app.LastChecked.HasValue)
                                        {
                                            <span class="badge @(app.IsResponding ? "bg-success" : "bg-danger")">
                                                @(app.HttpStatusCode?.ToString() ?? (app.IsResponding ? "OK" : "Error"))
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        @if (app.LastChecked.HasValue && app.ResponseTimeMs > 0)
                                        {
                                            <span class="@(app.IsResponding ? "text-success" : "text-danger")">
                                                @(app.ResponseTimeMs)ms
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">--</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            @if (_apps.Count > 10)
            {
                <div class="card-footer text-center">
                    <a href="/applications" class="btn btn-sm btn-outline-primary">View all @_apps.Count applications</a>
                </div>
            }
            @if (_apps.Count == 0)
            {
                <div class="card-body text-center text-muted">
                    <p>No applications found</p>
                </div>
            }
        </div>
    </div>

    <!-- Recent Events -->
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Recent Events</h5>
            </div>
            <div class="card-body p-0">
                @if (_eventSummary.RecentEvents.Count > 0)
                {
                    <div class="list-group list-group-flush">
                        @foreach (var evt in _eventSummary.RecentEvents.Take(8))
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <span class="badge @(evt.EventType == "Error" ? "bg-danger" : "bg-warning") me-2">
                                            @evt.EventType
                                        </span>
                                        <strong>@evt.Source</strong>
                                    </div>
                                    <small class="text-muted">@evt.TimeGenerated.ToString("HH:mm")</small>
                                </div>
                                <small class="text-muted d-block mt-1 text-truncate" style="max-width: 100%;">
                                    @evt.Message
                                </small>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-check-circle display-4"></i>
                        <p class="mt-2">No errors or warnings in the last 24 hours</p>
                    </div>
                }
            </div>
            @if (_eventSummary.RecentEvents.Count > 8)
            {
                <div class="card-footer text-center">
                    <a href="/events" class="btn btn-sm btn-outline-primary">View all events</a>
                </div>
            }
        </div>
    </div>
</div>

<div class="mt-3 text-center">
    <button class="btn btn-primary" @onclick="RefreshData" disabled="@_isLoading">
        <i class="bi bi-arrow-clockwise me-1"></i>
        @(_isLoading ? "Refreshing..." : "Refresh")
    </button>
    <small class="text-muted ms-3">Last updated: @_lastUpdate.ToString("HH:mm:ss")</small>
</div>

@code {
    private List<SiteInfo> _sites = new();
    private List<ApplicationInfo> _apps = new();
    private List<AppPoolInfo> _appPools = new();
    private EventSummary _eventSummary = new();
    private DateTime _lastUpdate = DateTime.Now;
    private bool _isLoading;

    protected override void OnInitialized()
    {
        RefreshData();
    }

    private void RefreshData()
    {
        _isLoading = true;
        StateHasChanged();

        try
        {
            _sites = IISMonitor.GetAllSites();
            _apps = IISMonitor.GetAllApplications();
            _appPools = IISMonitor.GetAllAppPools();
            _eventSummary = EventLog.GetEventSummary(24);
            _lastUpdate = DateTime.Now;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private string GetAppHealthBorderClass()
    {
        var unhealthyCount = _apps.Count(a => a.LastChecked.HasValue && !a.IsResponding);
        if (unhealthyCount > 0) return "border-danger";
        if (_apps.Count == 0) return "border-secondary";
        return "border-success";
    }

    private string GetAppHealthTextClass()
    {
        var unhealthyCount = _apps.Count(a => a.LastChecked.HasValue && !a.IsResponding);
        if (unhealthyCount > 0) return "text-danger";
        if (_apps.Count == 0) return "text-secondary";
        return "text-success";
    }
}
