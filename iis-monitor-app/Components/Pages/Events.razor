@page "/events"
@inject EventLogService EventLog
@rendermode InteractiveServer

<PageTitle>IIS Monitor - Events</PageTitle>

<h1 class="mb-4">Event Log</h1>

<div class="row mb-4">
    <div class="col-auto">
        <label class="form-label">Time Range</label>
        <select class="form-select" @bind="_hoursBack" @bind:after="RefreshData">
            <option value="1">Last Hour</option>
            <option value="6">Last 6 Hours</option>
            <option value="24">Last 24 Hours</option>
            <option value="48">Last 48 Hours</option>
            <option value="168">Last Week</option>
        </select>
    </div>
    <div class="col-auto">
        <label class="form-label">Type</label>
        <select class="form-select" @bind="_filterType">
            <option value="">All</option>
            <option value="Error">Errors Only</option>
            <option value="Warning">Warnings Only</option>
        </select>
    </div>
    <div class="col-auto">
        <label class="form-label">Source</label>
        <select class="form-select" @bind="_filterSource">
            <option value="">All Sources</option>
            @foreach (var source in _allSources)
            {
                <option value="@source">@source</option>
            }
        </select>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-danger">
            <div class="card-body text-center">
                <h3 class="text-danger">@_summary.TotalErrors</h3>
                <p class="mb-0">Errors</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-warning">
            <div class="card-body text-center">
                <h3 class="text-warning">@_summary.TotalWarnings</h3>
                <p class="mb-0">Warnings</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h3>@FilteredEvents.Count()</h3>
                <p class="mb-0">Filtered Results</p>
            </div>
        </div>
    </div>
</div>

<!-- Errors by Source -->
@if (_summary.ErrorsBySource.Count > 0)
{
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Errors by Source</h5>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var kvp in _summary.ErrorsBySource.OrderByDescending(x => x.Value))
                {
                    <div class="col-auto mb-2">
                        <span class="badge bg-danger">@kvp.Key: @kvp.Value</span>
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- Events Table -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Events</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
            <table class="table table-hover table-sm mb-0">
                <thead class="table-dark sticky-top">
                    <tr>
                        <th style="width: 140px;">Time</th>
                        <th style="width: 80px;">Type</th>
                        <th style="width: 200px;">Source</th>
                        <th>Message</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var evt in FilteredEvents.Take(200))
                    {
                        <tr class="@(evt.EventType == "Error" ? "table-danger" : "table-warning")">
                            <td><small>@evt.TimeGenerated.ToString("MM/dd HH:mm:ss") @GetTimezoneAbbr()</small></td>
                            <td>
                                <span class="badge @(evt.EventType == "Error" ? "bg-danger" : "bg-warning")">
                                    @evt.EventType
                                </span>
                            </td>
                            <td><small>@evt.Source</small></td>
                            <td>
                                <small class="text-break">@evt.Message</small>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @if (FilteredEvents.Count() > 200)
    {
        <div class="card-footer text-muted text-center">
            Showing 200 of @FilteredEvents.Count() events
        </div>
    }
</div>

<div class="mt-3">
    <button class="btn btn-primary" @onclick="RefreshData" disabled="@_isLoading">
        <i class="bi bi-arrow-clockwise me-1"></i>Refresh
    </button>
</div>

@code {
    private List<AppEventInfo> _events = new();
    private EventSummary _summary = new();
    private List<string> _allSources = new();
    private int _hoursBack = 24;
    private string _filterType = "";
    private string _filterSource = "";
    private bool _isLoading;

    private IEnumerable<AppEventInfo> FilteredEvents => _events
        .Where(e => string.IsNullOrEmpty(_filterType) || e.EventType == _filterType)
        .Where(e => string.IsNullOrEmpty(_filterSource) || e.Source == _filterSource);

    protected override void OnInitialized()
    {
        RefreshData();
    }

    private void RefreshData()
    {
        _isLoading = true;
        StateHasChanged();

        _events = EventLog.GetRecentEvents(_hoursBack);
        _summary = EventLog.GetEventSummary(_hoursBack);
        _allSources = _events.Select(e => e.Source).Distinct().OrderBy(s => s).ToList();

        _isLoading = false;
    }

    private string GetTimezoneAbbr()
    {
        return TimeZoneInfo.Local.IsDaylightSavingTime(DateTime.Now) ? "EDT" : "EST";
    }
}
